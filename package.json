{
  "name": "thror",
  "version": "1.0.1",
  "description": "Simple error creation utility",
  "license": "MIT",
  "author": {
    "name": "RÃ©my Abitbol",
    "url": "https://github.com/remscodes"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "test": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' TS_NODE_TRANSPILE_ONLY=1 mocha",
    "types": "tsc --noEmit",
    "types:spec": "npm run types -- -p ./tsconfig.spec.json",
    "types:all": "npm run types & npm run types:spec",
    "rm-dist": "node ./scripts/rm-dist.cjs",
    "prebuild": "npm run rm-dist",
    "pretest": "npm run types:all"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "node": "./dist/cjs/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remscodes/thror"
  },
  "engines": {
    "node": ">=18.13.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.39",
    "@types/sinon": "^17.0.2",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "error",
    "throw",
    "console",
    "logger"
  ],
  "packageManager": "pnpm@8.7.4",
  "sideEffects": false
}
